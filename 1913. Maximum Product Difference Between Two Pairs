class Solution {
public:
    int maxProductDifference(vector<int>& nums) {
        for(int i=0;i<nums.size()-1;i++)
        {
            nums[i]=abs(nums[i]);
        }
        sort(nums.begin(),nums.end());
        int n=nums.size();
        int a,b,c,d;
        a=nums[0];
        b=nums[1];
        c=nums[n-1];
        d=nums[n-2];
        return (c*d)-(a*b);
    }
};
